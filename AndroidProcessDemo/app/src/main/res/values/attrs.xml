<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DownloadProgressButton">
        <!--        进度条的宽度-->
        <attr name="dpb_width" format="dimension" />
        <!--        进度条的高度-->
        <attr name="dpb_height" format="dimension" />
        <!--        进度条的圆角半径-->
        <attr name="dpb_rounded_radius" format="dimension" />
        <!--        进度条的边框颜色-->
        <attr name="dpb_border_color" format="color" />
        <!--        进度条不可点击时的边框颜色-->
        <attr name="dpb_disable_border_color" format="color" />
        <!--        进度条的边框宽度-->
        <attr name="dpb_border_width" format="dimension" />
        <!--        进度条的背景颜色-->
        <attr name="dpb_background_color" format="color" />
        <!--        进度条的进度颜色-->
        <attr name="dpb_progress_color" format="color" />
        <!--        进度条的文本颜色-->
        <attr name="dpb_text_color" format="color" />
        <!--        进度条不可点击时的文本颜色-->
        <attr name="dpb_disable_text_color" format="color" />
        <!--        进度条文本与进度重合时的文本颜色-->
        <attr name="dpb_text_overlap_color" format="color" />
        <!--        进度条文本字体大小-->
        <attr name="dpb_text_size" format="dimension" />
        <!--        进度条最大的进度-->
        <attr name="dpb_max_progress" format="integer" />
    </declare-styleable>

    <!-- 自定义圆形进度条，属性设置 -->
    <declare-styleable name="CustomCircleProgress">
        <!-- 默认圆的颜色 -->
        <attr name="progress_default_color" format="color" />
        <!-- 进度圆的颜色 -->
        <attr name="progress_reached_color" format="color" />
        <!-- 进度条的高度 -->
        <attr name="progress_reached_height" format="dimension" />
        <!-- 无进度时(默认圆)的边框高 -->
        <attr name="progress_default_height" format="dimension" />
        <!-- 圆的半径 -->
        <attr name="circle_radius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="SportProgressView">
        <attr name="spv_startColor" format="reference|color" />
        <attr name="spv_endColor" format="reference|color" />
        <attr name="spv_emptyColor" format="reference|color" />
        <attr name="spv_stepTextSize" format="reference|dimension" />
        <attr name="spv_progressWidth" format="reference|dimension" />
        <attr name="spv_progress" format="reference|dimension" />
        <attr name="spv_width" format="dimension" />
        <attr name="spv_height" format="dimension" />
        <attr name="spv_start_value" format="string" />
        <attr name="spv_end_value" format="string" />
    </declare-styleable>

</resources>